<h1>Edit actor</h1>
 
 <form action="/update_actors/<%= @actor.id %>">
   <div>
     <label for="name_input">Actor name</label>
     <input id="name_input" type="text" name="name">
   </div>
 
   <div>
     <label for="bio_input">Bio</label>
     <input id="bio_input" type="text" name="bio">
   </div>

   <div>
     <label for="dob_input">DOB</label>
     <input id="dob_input" type="text" name="dob">
   </div>

   <div>
     <label for="image_input">Image URL</label>
     <input id="image_input" type="text" name="image_url">
   </div>

   <button>Create Actor</button>
 </form>