<h1>All Actors</h1>

<a href="/actors/new">
  Add a new actor
</a>

<% @list_of_actors.each do |the_actor| %>
  <div class="thumbnail">
    <img src="<%= the_actor.image_url %>">

    <div class="each_actor">
      <a href="/actors/<%= the_actor.id %>" class="btn btn-default btn-block">
        Show Details
      </a>

      <a href="/actors/<%= the_actor.id %>/edit" class="btn btn-default btn-block">
        Edit
      </a>

      <a href="/delete_actor/<%= the_actor.id %>" class="btn btn-default btn-block">
        Delete
      </a>
    </div>
  </div>
<% end %>