<div class="page-header">
  <h1>Actors</h1>
</div>

<p><a href="/actors/new_form" class="btn btn-primary">Add a New Actor</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Dob</th>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><img src="<%= actors.find(params[:image_url]) %>" width="80"></td>
        <td><%= @actors.dob %></td>
        <td><%= @actor_name %></td>
        <td><%= truncate(@actor_bio) %></td>
        <td>
          <a href="/actors/<%= @actor_id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/actors/<%= @actor_id %>/edit_form" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_actor/<%= @actor_id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

